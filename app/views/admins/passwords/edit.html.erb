<h2><%= I18n.t('devise.change_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put, :class => "form-horizontal"}) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.label :password, I18n.t('devise.new_password'), class: "col-md-2 control-label" %>
      <% if @validatable %>
          <em>(<%= @minimum_password_length %> <%= I18n.t('devise.characters_minimum') %>)</em>
      <% end %>
      <div class="col-sm-4">
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, I18n.t('devise.new_password_confirmation'), class: "col-md-2 control-label" %>
      <div class="col-sm-4">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit I18n.t('devise.change_password'), class: "btn btn-default" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10">
        <%= render "admins/shared/links" %>
      </div>
    </div>
<% end %>
