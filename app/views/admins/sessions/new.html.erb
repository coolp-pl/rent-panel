<h2> <%=  I18n.t('devise.admin.log_in') %> </h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>

    <div class="form-group">
      <%= f.label :email, I18n.t('devise.admin.email'), class: "col-md-2 control-label" %>
      <div class="col-sm-4">
        <%= f.email_field :email, autofocus: true, class: "form-control"  %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, I18n.t('devise.admin.password'), class: "col-md-2 control-label"  %>
      <div class="col-sm-4">
        <%= f.password_field :password, autocomplete: "off", class: "form-control"   %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, I18n.t('devise.admin.remember_me') %>
            </div>
        <% end -%>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit  I18n.t('devise.admin.log_in'), class: "btn btn-default"  %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10">
        <%= render "admins/shared/links" %>
      </div>
    </div>
<% end %>


