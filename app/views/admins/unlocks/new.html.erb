<h2> <%= I18n.t('devise.resend_unlock') %> </h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: {method: :post, :class => "form-horizontal"}) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email, I18n.t('devise.email'), class: "col-md-2 control-label" %>
      <div class="col-sm-4">
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit I18n.t('devise.send_instructions'), class: "btn btn-default" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10">
        <%= render "admins/shared/links" %>
      </div>
    </div>
<% end %>
