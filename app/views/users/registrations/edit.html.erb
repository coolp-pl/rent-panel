<h2> <%= I18n.t('devise.user.edit_registration') %> </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put, :class => "form-horizontal"}) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email, I18n.t('devise.user.email'), class: "col-md-2 control-label" %>
      <div class="col-sm-4">
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= I18n.t('devise.user.waiting_for_confirmation') %> <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :password, I18n.t('devise.user.password'), class: "col-md-2 control-label" %>
      <i><%= I18n.t('devise.user.leave_blank_to_not_change') %></i>

      <div class="col-sm-4">
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, I18n.t('devise.user.password_confirmation'), class: "col-md-2 control-label" %>
      <div class="col-sm-4">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :current_password, I18n.t('devise.user.current_password'), class: "col-md-2 control-label" %>
      <i><%= I18n.t('devise.user.password_needed_to_confirm') %></i>

      <div class="col-sm-4">
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit I18n.t('devise.user.update'), class: "btn btn-default" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10">
        <%= render "users/shared/links" %>
      </div>
    </div>
<% end %>

<div class="col-sm-10">
  <%= button_to I18n.t('devise.user.cancel_account'), registration_path(resource_name), data: {confirm: "Are you sure?"}, method: :delete, class: "btn btn-danger" %>
  <%= link_to I18n.t('navigation.back'), :back, class: "btn btn-link" %>
</div>